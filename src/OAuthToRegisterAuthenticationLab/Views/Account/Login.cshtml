@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using OAuthToRegisterAuthenticationLab
@using System.Security.Claims
@model AccountController.LoginViewModel
@{

}
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <script src="~/clk.lab.js"></script>
</head>
<body>

    <!--Title-->
    <h2>Account.Login</h2>
    <hr />

    <!--LoginByGoogle-->
    <form asp-action="ExternalLogin" asp-route-authenticationScheme="@GoogleOAuthAuthenticationDefaults.AuthenticationScheme" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
        <input type="submit" value="LoginByGoogle" /><br />
        <br />
    </form>
    <hr />

    <!--LoginByFacebook-->
    <form asp-action="ExternalLogin" asp-route-authenticationScheme="@FacebookOAuthAuthenticationDefaults.AuthenticationScheme" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
        <input type="submit" value="LoginByFacebook" /><br />
        <br />
    </form>
    <hr />

    <!--LoginByPassword-->
    <form asp-action="PasswordSignIn" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]" method="post">
        <input type="submit" value="LoginByPassword" /><br />
        UserId:<input type="text" name="userId" value="@Model.UserId" /><br />
        Password:<input type="password" name="password" value="" /><br />
        <div style="color:red">@Model.Message</div><br />
    </form>
    <hr />

    <!--RegisterUser-->
    <a asp-action="Register" asp-route-returnUrl="@Context.Request.Query["ReturnUrl"]">
        <input type="submit" value="RegisterUser" /><br />
        <br />
    </a>
    <hr />

</body>
</html>